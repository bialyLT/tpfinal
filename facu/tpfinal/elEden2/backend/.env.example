# ============================================
# CONFIGURACIÓN GENERAL DE DJANGO
# ============================================
DJANGO_ENV=development
SECRET_KEY=your_secret_key_here
DEBUG=True

# Hosts permitidos (separados por coma)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
# Para usar PostgreSQL, configura DATABASE_URL
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_db
# Ejemplo local: postgresql://postgres:password@localhost:5432/eleden_db
# Ejemplo remoto: postgresql://user:pass@db.ejemplo.com:5432/eleden_db
# Si no configuras DATABASE_URL, se usará SQLite por defecto
DATABASE_URL=

# ============================================
# GOOGLE OAUTH2 CONFIGURATION
# ============================================
# Obtener de: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================
# URLs DEL PROYECTO
# ============================================
# URL del frontend (importante para CORS y redirecciones)
FRONTEND_URL=http://localhost:5173

# URL del backend
BACKEND_URL=http://localhost:8000

# ============================================
# MERCADOPAGO CONFIGURATION
# ============================================
# Credenciales del VENDEDOR de prueba
# Obtenidas desde: https://www.mercadopago.com.ar/developers/panel
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key

# Cuentas de prueba (opcional, para testing)
MERCADOPAGO_SELLER_TEST_USER=your_seller_test_user
MERCADOPAGO_SELLER_TEST_PASSWORD=your_seller_test_password
MERCADOPAGO_BUYER_TEST_USER=your_buyer_test_user
MERCADOPAGO_BUYER_TEST_PASSWORD=your_buyer_test_password
